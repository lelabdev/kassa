# Kassa Environment Configuration
# Copy this file to .env.local (local development) or .env.production for your environment
#
# Environment Variables Guide:
# - Dev: Used during local development (pnpm dev)
# - Preview: Used for production build preview (pnpm preview)
# - Production: Used in Cloudflare deployment

# ============================================================================
# ENVIRONMENT
# ============================================================================
# Required: Specifies the deployment environment
# Values: development | preview | production
NODE_ENV=development
PUBLIC_ENV=development

# ============================================================================
# APP CONFIGURATION
# ============================================================================
# App name and version (optional - defaults to Kassa v1)
PUBLIC_APP_NAME=Kassa
PUBLIC_APP_VERSION=1.0.0

# ============================================================================
# DEBUG & LOGGING
# ============================================================================
# Enable debug logging in development
# Optional: Defaults to false in production, true in development
PUBLIC_DEBUG=false

# ============================================================================
# API CONFIGURATION
# ============================================================================
# Base URL for API requests (for future backend integration)
# Optional: Defaults to relative URLs (current origin)
# Example: https://api.kassa.example.com
PUBLIC_API_BASE_URL=

# API timeout in milliseconds
# Optional: Defaults to 30000 (30 seconds)
PUBLIC_API_TIMEOUT=30000

# ============================================================================
# POUCHDB CONFIGURATION
# ============================================================================
# Local PouchDB database name
# Optional: Defaults to 'kassa'
PUBLIC_DB_NAME=kassa

# Remote CouchDB/PouchDB server URL for replication and sync
# Optional: Leave empty to disable remote sync
# Format: https://username:password@server.com/dbname
# Example: https://user:pass@couchdb.example.com/kassa
PUBLIC_REMOTE_DB_URL=

# Enable PouchDB debugging (logs all DB operations)
# Optional: Defaults to false
PUBLIC_DB_DEBUG=false

# ============================================================================
# PWA CONFIGURATION
# ============================================================================
# Enable service worker
# Optional: Defaults to true
PUBLIC_ENABLE_PWA=true

# Enable offline support
# Optional: Defaults to true
PUBLIC_ENABLE_OFFLINE=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable sales history and analytics features
# Optional: Defaults to true
PUBLIC_ENABLE_ANALYTICS=true

# Enable product management features
# Optional: Defaults to true
PUBLIC_ENABLE_PRODUCT_MANAGEMENT=true

# Enable client management features
# Optional: Defaults to true
PUBLIC_ENABLE_CLIENT_MANAGEMENT=true

# ============================================================================
# CLOUDFLARE CONFIGURATION (Production Only)
# ============================================================================
# Cloudflare Account ID (for Cloudflare KV, Durable Objects, etc.)
# Optional: Only needed if using Cloudflare KV storage
CLOUDFLARE_ACCOUNT_ID=

# Cloudflare API Token (for deployments and API access)
# Optional: Only needed for automated deployments
CLOUDFLARE_API_TOKEN=

# ============================================================================
# BUILD CONFIGURATION
# ============================================================================
# Vite build mode
# Optional: Defaults to 'client'
VITE_BUILD_MODE=client
